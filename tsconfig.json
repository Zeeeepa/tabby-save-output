{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": "./src/",
        "paths": {
            "*": ["*"]
        },
        "types": [
            "node",
            "webpack-env"
        ]
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}
